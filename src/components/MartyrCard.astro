---
const {
    Name,
    Age,
    Occupation,
    Nature_of_Death,
    Hospital,
    Place_of_Occurrence,
    Killing_Date,
    Killing_Time,
} = Astro.props;
---

<div class="martyr-card">
    <h2>{Name || "Unidentified"}</h2>
    <p>Age: {Age || "Unknown"}</p>
    <p>Occupation: {Occupation || "Unknown"}</p>
    <p>Nature of Death: {Nature_of_Death || "Unknown"}</p>
    <p>Hospital: {Hospital || "Unknown"}</p>
    <p>Place of Occurrence: {Place_of_Occurrence || "Unknown"}</p>
    <p>Killing Date: {Killing_Date || "Unknown"}</p>
    <p>Killing Time: {Killing_Time || "Unknown"}</p>
</div>
